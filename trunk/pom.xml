        <id>jjt-jcc</id>
       <phase>generate-sources</phase>
       <goals>
        <goal>javacc</goal>
       </goals>
       <configuration>
        <packageName>org.javacc.jjtree</packageName>
        <sourceDirectory>target\generated-sources\jjtree</sourceDirectory>
       </configuration>
      </execution>

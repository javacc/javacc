    <mkdir dir="test.tmp" />

    <echo />
    
    <java failonerror="true" fork="true" classname="javacc" classpath="target/classes">
      <arg line="-OUTPUT_DIRECTORY=test.tmp/CORBA-IDL examples/CORBA-IDL/IDL.jj" />

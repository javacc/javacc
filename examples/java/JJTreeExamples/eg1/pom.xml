<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.javacc.examples.java</groupId>
		<artifactId>JJTreeExamples</artifactId>
		<version>8.0.0</version>
	</parent>
	<groupId>org.javacc.examples.java.jjtreeexamples</groupId>
	<artifactId>eg1</artifactId>
	<name>JavaCC examples Java JJTreeExamples EG1</name>
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>javacc-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>jcc</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>jjtree-javacc</goal>
						</goals>
						<configuration>
							<codeGenerator>Java</codeGenerator>
							<nodeDirectory>src/main/java</nodeDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<executions>
					<execution>
						<phase>test</phase>
						<goals>
							<goal>java</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<mainClass>Eg1</mainClass>
					<arguments>
						<argument>${project.basedir}/eg1.in</argument>
						<argument>${project.basedir}/eg1.out</argument>
						<argument>${project.basedir}/eg1.err</argument>
					</arguments>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>compare-eg1</id>
						<phase>test</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target unless="maven.test.skip">
								<available file="${project.basedir}/eg1.out" property="isActualAvailable" />
								<fail unless="isActualAvailable" message="${project.basedir}/eg1.out does not exist!" />
								<available file="${project.basedir}/eg1.ref" property="isExpectedAvailable" />
								<fail unless="isExpectedAvailable" message="${project.basedir}/eg1.ref does not exist!" />
								<condition property="files.match">
									<filesmatch file1="${project.basedir}/eg1.out" file2="${project.basedir}/eg1.ref" />
								</condition>
								<fail unless="files.match" message="${project.basedir}/eg1.out does not match ${project.basedir}/eg1.ref!" />
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>